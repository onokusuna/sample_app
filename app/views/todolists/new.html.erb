<!-- new.html.erbはデータ入力のみを担当 -->

<h1>新規投稿</h1>
<!-- form_for部分 -->
<%= form_for(@list, url: '/todolists') do |f| %> 

	<!-- form_forの間にフォームオブジェクト -->
	<!-- (利用者からの入力を受け付ける操作要素/のデータとメソッドを1つにまとめたもの) -->
	<!-- テキストボックス -->
	<h4>タイトル</h4>
	<%= f.text_field :title %>
	<!-- テキストエリア -->
	<h4>本文</h4>
	<%= f.text_area :body %>
	<!-- 送信ボタン submit -->
	<%= f.submit '投稿' %>

<% end %>  <!-- rubyタグ -->